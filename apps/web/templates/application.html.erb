<!DOCTYPE html>
<html>
  <head>
    <title>quatroLABS Watchman</title>
    <%= stylesheet 'https://fonts.googleapis.com/css?family=Inconsolata:400,700|Montserrat:200,200i,400,400i,700,700i&display=swap' %>
    <%= stylesheet 'https://unpkg.com/normalize.css@8.0.1/normalize.css' %>
    <%= stylesheet 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css' %>
    <%= favicon 'https://cdn.quatrolabs.com/favicon.ico' %>
    <%= stylesheet 'nprogress.css' %>
    <% if Hanami.env?(:production) %>
    <%= stylesheet 'app.css' %>
    <% else %>
    <%= stylesheet 'http://localhost:3100/public/assets/app.css' %>
    <% end %>
  </head>
  <body>
    <%= yield %>
    <script>(function(){window.Watchman = JSON.parse('{"version": "<%= Backdoor::VERSION %>", "commitHash": "<%= Backdoor::COMMIT_HASH %>"}');})();</script>
    <%= javascript 'nprogress.js' %>
    <% if Hanami.env?(:production) %>
    <%= javascript 'app.js' %>
    <% else %>
    <%= javascript 'http://localhost:3100/public/assets/app.js' %>
    <% end %>
  </body>
</html>
