{
  "env": {
      "browser": true,
      "es6": true
  },
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "NProgress": "readonly",
      "__COMMIT_HASH__": "readonly"
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module",
      "parser": "babel-eslint"
  },
  "extends": [
    "standard",
    "standard-react",
    "plugin:react/recommended"
  ],
  "plugins": [
      "react"
  ],
  "rules": {
    "semi": ["error", "always"],
    "no-useless-escape": 0,
    "react/prop-types": 0,
    "react/self-closing-comp": ["error", { "component": true, "html": false }],
    "jsx-quotes": ["error", "prefer-double"]
  }
}
